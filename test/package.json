{
  "name": "en-test",
  "version": "0.0.1",
  "description": "absurdly big node.js module for testing simple chrome extension",
  "scripts": {
    "test": "npm run karma-test && npm run selen-test",
    "ist": "istanbul help cover", 
    "karma-test": "karma start src/karma.conf.js --single-run",
    "selen-test": "istanbul cover --report lcovonly --report text --dir ./coverage/selenium/ ./node_modules/mocha/bin/_mocha src/selenium/selen_test.spec.js",
    "report-coverage": "codecov",
    "travis-karma-test": "karma start src/karma.conf.js --single-run",
    "travis-selen-test": "istanbul cover --report lcovonly --report text --dir ./coverage/selenium/ ./node_modules/mocha/bin/_mocha src/selenium/selen_test.spec.js",
    "travis-codecov": "cat ./coverage/selenium/lcov.info ./coverage/karma/*/lcov.info | ./node_modules/codecov.io/bin/codecov.io.js"
  },
  "devDependencies": {
    "chai": "^4.1.0",
    "codecov.io": "^0.1.6",
    "istanbul": "^0.4.5",
    "karma": "^1.7.0",
    "karma-chrome-launcher": "^2.2.0",
    "karma-coverage": "^1.1.1",
    "karma-firefox-launcher": "^1.0.1",
    "karma-mocha": "^1.3.0",
    "karma-mocha-reporter": "^2.2.3",
    "karma-sinon-chai": "^1.3.1",
    "lolex": "^2.1.1",
    "mocha": "^3.4.2",
    "selenium-webdriver": "3.5.0",
    "sinon": "^2.3.8",
    "sinon-chai": "^2.12.0"
  }
}
