{
  "manifest_version": 2,
  "name": "en: Extension + Notifier for Manga Updates",
  "short_name": "en",
  "description": "Get notified of new English-translated Asian releases (manga, light/web novels, etc.) and track your progress",
  "version": "0.1.2.3221",
  "permissions": [
    "*://www.mangaupdates.com/*",
    "storage",
    "unlimitedStorage",
    "notifications",
    "webRequest",
    "tabs",
    "alarms"
  ],
  "browser_action": {
    "default_icon": "img/icon16.png",
    "default_popup": "src/html/popup.html"
  },
  "background": {
    "scripts": [
      "src/js/encore.js",
      "src/js/encore_util.js",
      "src/js/encore_mu.js",
      "src/js/mu_parse.js",
      "src/js/mu_comm.js",
      "src/js/bg_ext_update.js",
      "src/js/bg_handler.js",
      "src/js/bg.js",
      "src/js/background.js"
    ]
  },
  "icons": {
    "16" :  "img/icon16.png",
    "48": "img/icon48.png",
    "128": "img/icon128.png"
  }
}